        function updateGraph(graphId, labels, data, title, firstTime=false) {
            var configCasos = {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: medioLeftPretty,
                        lineTension: 0,
                        backgroundColor: window.chartColors.green,
                        borderColor: window.chartColors.green,
                        data: data[0],
                        fill: false
                    },
                    {
                        label: medioRightPretty,
                        lineTension: 0,
                        backgroundColor: window.chartColors.blue_like,
                        borderColor: window.chartColors.blue_like,
                        data: data[1],
                        fill: false
                    }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    title:{
                        display:true,
                        text: title
                    },
                    tooltips: {
                        mode: 'index',
                        intersect: false,
                    },
                    hover: {
                        mode: 'nearest',
                        intersect: true
                    },
                    scales: {
                        xAxes: [{
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: 'Tiempo'
                            }
                        }],
                        yAxes: [{
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: 'Valor'
                            }
                        }]
                    }
                }
            };


            if (firstTime) {
                var ctx = document.getElementById(graphId).getContext("2d");
                window[graphId] = new Chart(ctx, configCasos);
                
                window[graphId].update()
            }
            else {
                window[graphId].data = {
                    labels: labels,
                    datasets: [{
                        label: medioLeftPretty,
                        lineTension: 0,
                        backgroundColor: window.chartColors.green,
                        borderColor: window.chartColors.green,
                        data: data[0],
                        fill: false
                    },
                    {
                        label: medioRightPretty,
                        lineTension: 0,
                        backgroundColor: window.chartColors.blue_like,
                        borderColor: window.chartColors.blue_like,
                        data: data[1],
                        fill: false
                    }]
                }

                window[graphId].update()
            }
        }

        function getPostCountFor(entity, pageId, specific, callback) {
            $.get("/summary/descriptive/posts/" + pageId + "/" + entity + "/" + specific, function (data) {
